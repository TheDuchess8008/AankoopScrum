@model PrulariaAankoopData.Models.Categorie

@{
    ViewData["Title"] = "Delete";
}

<h1>Verwijderen</h1>

<h3>Weet je zeker dat je deze categorie wilt verwijderen?</h3>
<div>
    <h4>Categorie</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Naam)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Naam)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.HoofdCategorie)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.HoofdCategorie.Naam)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="CategorieId" />
        <input type="submit" value="Verwijderen" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary huiskleur">Terug</a>
    </form>
</div>
<div style="margin-bottom: 50px;"></div>