@model PrulariaAankoopData.Models.Categorie

@{
    ViewData["Title"] = "Create";
}

<h1 class="mb-3">Maak een nieuwe Categorie</h1>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3">
                <label asp-for="Naam" class="control-label"></label>
                <input asp-for="Naam" class="form-control" />
                <span asp-validation-for="Naam" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="HoofdCategorieId" class="control-label"></label>
                <select asp-for="HoofdCategorieId" class ="form-control" asp-items="ViewBag.HoofdCategorieId"></select>
            </div>
            <div class="d-flex gap-2 mt-3">
                <input type="submit" value="Create" class="btn huiskleur" />
                <a asp-action="Index" class="btn btn-terug">Terug</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
