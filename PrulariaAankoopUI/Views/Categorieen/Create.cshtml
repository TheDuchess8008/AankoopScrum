@model CategorieToevoegenViewModel

@{
    ViewData["Title"] = "Create";
}

<h1 class="mb-3">Voeg een nieuwe categorie toe</h1>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3">
                <label asp-for="Naam" class="control-label"></label>
                <input asp-for="Naam" class="form-control" />
                <span asp-validation-for="Naam" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="HoofdCategorieId" class="control-label"></label>
                <select asp-for="HoofdCategorieId" class="form-control me-2" asp-items="@Model.HoofdCategorien">
                    <option value="">-- Selecteer een hoofd categorie --</option>
                <span asp-validation-for="HoofdCategorieId" class="text-danger"></span>
                </select>
                </div>
            
            
            <div class="d-flex gap-2 mt-3">
                <input type="submit" value="Toevoegen" class="btn huiskleur" />
                <a asp-action="Index" class="btn btn-terug">Terug</a>
            </div>
        </form>
    </div>
</div>

<div style="margin-bottom: 50px;"></div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}