@model IEnumerable<PrulariaAankoopData.Models.Categorie>

@{
    ViewData["Title"] = "Categorieen";
}

<h1>Categorieen</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Naam)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HoofdCategorie)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Naam)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HoofdCategorie.Naam)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CategorieId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CategorieId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CategorieId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
