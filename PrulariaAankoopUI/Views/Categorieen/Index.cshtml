@model IEnumerable<PrulariaAankoopData.Models.Categorie>

@{
    ViewData["Title"] = "Categorieën";
}

<h1>Categorieën</h1>

<p>
    <a asp-action="Create" class="btn huiskleur">Toevoegen</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th style ="width: 250px">
                Hoofdcategorieën
            </th>
            <th style="width: 250px">
                Subcategorieën
            </th>
            <th style="width: 140px">
                Aantal artikelen
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @if (item.Subcategorieën.Count() > 0)
                    {
                        @Html.DisplayFor(modelItem => item.Naam)
                    }
                </td>
                <td>
                    @if (item.Subcategorieën.Count == 0)
                    {
                        @Html.DisplayFor(modelItem => item.Naam)
                    }
                </td>
                <td style="text-align: center">
                    @if (item.Subcategorieën.Count() == 0)
                    {
                        @item.Artikelen.Count()
                    }
                    else
                    {
                        var artikelen = 0;
                        foreach (var categorie in item.Subcategorieën)
                        {
                            if (categorie.Subcategorieën.Count() == 0)
                            {
                                artikelen += categorie.Artikelen.Count();
                            }
                            else
                            {
                                foreach (var subcategorie in categorie.Subcategorieën)
                                {
                                    artikelen += subcategorie.Artikelen.Count();
                                }
                            }
                        }
                        @artikelen
                    }
                </td>
                <td class="action-buttons">
                    <a asp-action="Edit" asp-route-id="@item.CategorieId" title="Bewerken">
                        <button class="btn btn-icon btn-edit"><i class="bi bi-pencil"></i></button>
                    </a>
                    <a asp-action="Details" asp-route-id="@item.CategorieId" title="Details bekijken">
                        <button class="btn btn-icon btn-details"><i class="bi bi-eye"></i></button>
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.CategorieId" title="Verwijderen">
                        <button class="btn btn-icon btn-delete"><i class="bi bi-trash"></i></button>
                    </a>
                </td>

            </tr>
        }
    </tbody>
</table>
