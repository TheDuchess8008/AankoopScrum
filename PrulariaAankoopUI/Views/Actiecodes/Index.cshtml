@model IEnumerable<PrulariaAankoopData.Models.Actiecode>

@{
    ViewData["Title"] = "Actiecodes";
}

<h1>Actiecodes</h1>

<p>
    <a asp-action="Create">Een nieuwe Actiecode toevoegen</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Naam)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GeldigVanDatum)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GeldigTotDatum)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsEenmalig)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Naam)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GeldigVanDatum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GeldigTotDatum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsEenmalig)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.ActiecodeId" class="btn btn-secondary huiskleur">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ActiecodeId" class="btn btn-secondary huiskleur">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ActiecodeId" class="btn btn-secondary huiskleur">Delete</a>
               
            </td>
        </tr>
}
    </tbody>
</table>
