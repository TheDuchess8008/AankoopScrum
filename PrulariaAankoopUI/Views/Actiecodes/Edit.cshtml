@model ActiecodeWijzigenViewModel;

@{
    ViewData["Title"] = "Edit Actiecode";
}

<div class="container mt-4">
    <h1 class="mb-3">Wijzig de Actiecode</h1>
    <hr />

    <div class="row">
        <div class="col-md-6">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label asp-for="Naam" class="control-label"></label>
                    <input asp-for="Naam" class="form-control" value="1" placeholder="Enter name"/>
                    <span asp-validation-for="Naam" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="GeldigVanDatum" class="control-label">Geldig Van</label>
                    <input asp-for="GeldigVanDatum" class="form-control" type="date" />
                    <span asp-validation-for="GeldigVanDatum" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="GeldigTotDatum" class="control-label">Geldig Tot</label>
                    <input asp-for="GeldigTotDatum" class="form-control" type="date" />
                    <span asp-validation-for="GeldigTotDatum" class="text-danger"></span>
                </div>

                <div class="form-check mb-3">
                    <input class="form-check-input" type="checkbox" asp-for="IsEenmalig" />
                    <label class="form-check-label fw-bold">Eenmalig</label>
                        @Html.DisplayNameFor(model => model.IsEenmalig)
                    
                </div>

                <div class="d-flex gap-2 mt-3">
                    <button type="submit" class="btn huiskleur">Opslaan</button>
                    <a asp-action="Index" class="btn btn-terug">Terug</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
