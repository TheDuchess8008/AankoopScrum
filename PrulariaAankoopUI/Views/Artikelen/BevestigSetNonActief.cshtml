@using PrulariaAankoopData.Models
@model Artikel

@{
    ViewData["Title"] = "Bevestiging - Artikel Non Actief";
}

<h2>Bevestig Non Actief</h2>
<p>Weet je zeker dat je dit artikel op non-actief wilt zetten? <br />
    <strong>@Model.Naam <br /> (@Model.Beschrijving)</strong>
</p>

<form asp-action="SetArtikelNonActief" method="post">

    <input type="hidden" name="artikelId" value="@Model.ArtikelId" />

    <button type="submit" class="btn btn-danger">Ja, zet op non-actief</button>
    <a asp-action="Index" class="btn btn-secondary">Annuleren</a>
</form>
