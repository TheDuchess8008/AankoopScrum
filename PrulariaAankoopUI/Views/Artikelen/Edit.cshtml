@model PrulariaAankoopData.Models.ArtikelViewModel

@{
    ViewData["Title"] = "Edit";
}
@if (ViewBag.Message != null)
{
    <div class="alert alert-success">
        @ViewBag.Message
    </div>
}
<h1>Edit</h1>

<h4>Artikel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Artikel.ArtikelId" />
            <div class="form-group">
                <label asp-for="Artikel.Ean" class="control-label"></label>
                <input asp-for="Artikel.Ean" class="form-control" readonly />
                <span asp-validation-for="Artikel.Ean" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Artikel.Naam" class="control-label"></label>
                <input asp-for="Artikel.Naam" class="form-control" />
                <span asp-validation-for="Artikel.Naam" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Artikel.Beschrijving" class="control-label"></label>
                <input asp-for="Artikel.Beschrijving" class="form-control" />
                <span asp-validation-for="Artikel.Beschrijving" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Artikel.Prijs" class="control-label"></label>
                <input asp-for="Artikel.Prijs" class="form-control" />
                <span asp-validation-for="Artikel.Prijs" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Artikel.GewichtInGram" class="control-label"></label>
                <input asp-for="Artikel.GewichtInGram" class="form-control" />
                <span asp-validation-for="Artikel.GewichtInGram" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Artikel.Bestelpeil" class="control-label"></label>
                <input asp-for="Artikel.Bestelpeil" class="form-control" />
                <span asp-validation-for="Artikel.Bestelpeil" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Artikel.Voorraad" class="control-label"></label>
                <input asp-for="Artikel.Voorraad" class="form-control" readonly />
                <span asp-validation-for="Artikel.Voorraad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Artikel.MinimumVoorraad" class="control-label"></label>
                <input asp-for="Artikel.MinimumVoorraad" class="form-control" />
                <span asp-validation-for="Artikel.MinimumVoorraad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Artikel.MaximumVoorraad" class="control-label"></label>
                <input asp-for="Artikel.MaximumVoorraad" class="form-control" />
                <span asp-validation-for="Artikel.MaximumVoorraad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Artikel.Levertijd" class="control-label"></label>
                <input asp-for="Artikel.Levertijd" class="form-control" />
                <span asp-validation-for="Artikel.Levertijd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Artikel.AantalBesteldLeverancier" class="control-label"></label>
                <input asp-for="Artikel.AantalBesteldLeverancier" class="form-control" />
                <span asp-validation-for="Artikel.AantalBesteldLeverancier" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Artikel.MaxAantalInMagazijnPlaats" class="control-label"></label>
                <input asp-for="Artikel.MaxAantalInMagazijnPlaats" class="form-control" />
                <span asp-validation-for="Artikel.MaxAantalInMagazijnPlaats" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Artikel.LeveranciersId" class="control-label"></label>
                <select asp-for="Artikel.LeveranciersId" class="form-control" asp-items="ViewBag.LeveranciersId"></select>
                <span asp-validation-for="Artikel.LeveranciersId" class="text-danger"></span>
            </div>
            <p></p>
            <div class="form-group">
                <button type="submit" class="btn btn-primary huiskleur">Opslaan</button>
                <a asp-action="Index" class="btn btn-secondary huiskleur">Terug</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
